<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!--
    Partner Tax & Address Validation
    -->

   <record id="view_partner_details_form_inherit1" model="ir.ui.view">
            <field name="name">res.partner.details.form.inherit1</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
              <xpath expr="/form/sheet/notebook/page[@string='Accounting']" position="inside">
                <group col="4" colspan="4" string="TAx Details">
	               <field name="tax_schedule_id"/>
	               <field name="exemption_number"/>
	               <field name="exemption_code_id"/>
          		</group>
        	</xpath>
        	<xpath expr="/form/sheet/group" position="inside">
          		<group col="4" colspan="2">
                  <field name="latitude"/>
                  <field name="longitude"/>
                </group>
                <newline/>
          		<group colspan="2" col="6" string="Validation">
                   <field name="date_validation"/>
                   <field name="validation_method"/>
                   <button name="%(action_account_salestax_avatax_address_validate)d" string="_Validate" type="action" icon="terp-camera_test" colspan="2" context="{'from_validate_button': True}"/>
                </group>
        	</xpath>
      </field>
    </record>

    </data>
</openerp>
